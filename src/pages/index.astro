    <Container>
      <SectionTitle
        title="Apa kata mereka?"
        subtitle="Kepul.id telah membantu lebih dari 100+ ribu pengguna yang tersebar di Kota Medan dan Tangerang Selatan."
        minititle="REVIEWS"
        class="'mx-auto text-center'"
      />
      <Testimonials />
    </Container>
  </SectionMuted>

  <SectionMuted>
    <Container>
      <Cta />
    </Container>
