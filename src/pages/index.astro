---
import Layout from "@layouts/Default.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
import HeroMain from "@components/hero/HeroMain.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Container from "@components/section/Container.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import IconBlock from "@components/content/IconBlock.astro";
import Toolbar from "@components/content/doctors/grid/Toolbar.astro";
import Grid from "@components/content/doctors/grid/Grid.astro";
import SideStatsRight from "@components/content/features/SideStatsRight.astro";
import SideStatsLeft from "@components/content/features/SideStatsLeft.astro";
import Cta from "@components/content/Cta.astro";
import Testimonials from "@components/content/Testimonials.astro";

const features = [
  {
    title: "Jual Sampah",
    description: "Jual sampah daur ulang (non-B3), daftarkan sampah anda dan dapatkan uang tunai dan jaga lingkungan.",
    icon: "ic_jual_sampah",
    color: "blue"
  },
  {
    title: "Sedekah Sampah",
    description: "Donasikan sampah daur ulang untuk sosial, sumbangkan sampah anda untuk program amal yang terpercaya.",
    icon: "ic_sedekah",
    color: "green"
  },
  {
    title: "Kepul Point",
    description: "Antar dan jual sampah daur ulang secara mandiri di Kepul Point terdekat anda.",
    icon: "ic_point",
    color: "orange"
  },
  {
    title: "Bisnis & Event",
    description: "Kelola dan atur penjemputan sampah daur ulang dari perusahaan atau acara anda melalui Kepul.",
    icon: "ic_bisnis_event",
    color: "indigo"
  },
  {
    title: "Sekolah Bebas Sampah",
    description: "Memberdayakan siswa sekolah untuk mendapatkan uang kas atau tabungan tambahan dengan sampah daur ulang.",
    icon: "ic_sekolah",
    color: "rose"
  },
  {
    title: "Sembako Sampah",
    description: "Membantu masyarakat mendapatkan berbagai kebutuhan dengan harga lebih murah dengan potongan harga jual sampah daur ulang.",
    icon: "ic_sembako",
    color: "green"
  }
];
---

<Layout title="Home">
  <HeroMain />

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Kenapa harus menggunakan Kepul.id?"
        subtitle=""
        minititle="HIGHLIGHTS"
      />

      <div class="grid md:grid-cols-3 ltablet:grid-cols-4 lg:grid-cols-4 gap-x-6 gap-y-12" x-intersect="activeStep = ''">
        {
          features.map((feature) => (
            <div>
              <IconBlock
                icon={feature.icon}
                title={feature.title}
                text={feature.description}
                bg={feature.color}
              />
            </div>
          ))
        }
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted class="'border-b border-muted-200 dark:border-muted-800'">
    <Container>
      <SectionTitle
        title="Harga Produk Terkini"
        subtitle="Berikut adalah harga terkini untuk tiap kategori sampah daur ulang yang dapat anda jual."
        minititle="PRODUCTS"
      />

      <div id="doctors" x-data="goods()"  x-intersect="activeStep = 'spy-1'">
        <Toolbar />

        <!--Grid wrapper-->
        <div class="py-10">
          <div class="grid grid-cols-12 md:gap-12 pb-20">
            <!--Content-->
            <div class="col-span-12 lg:col-span-12">
              <!--Subgrid-->
              <Grid />
            </div>
          </div>
        </div>
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Jual Sampah Jadi Mudah"
        subtitle=""
        minititle="HOW-TO"
      />

      <div class="mt-16 grid divide-x divide-y divide-gray-100 dark:divide-gray-700 overflow-hidden rounded-3xl border border-gray-100 text-gray-600 dark:border-gray-700 sm:grid-cols-2 lg:grid-cols-4 lg:divide-y-0 xl:grid-cols-4">
        <div class="group relative bg-white dark:bg-gray-800 transition hover:z-[1] hover:shadow-2xl hover:shadow-gray-600/10">
          <div class="relative space-y-8 py-12 p-8">
            <img src="https://cdn-icons-png.flaticon.com/512/4341/4341139.png" class="w-12" width="512" height="512" alt="burger illustration">
  
            <div class="space-y-2">
              <h5 class="text-xl font-semibold text-gray-700 dark:text-white transition group-hover:text-secondary">
                First feature
              </h5>
              <p class="text-gray-600 dark:text-gray-300">
                Neque Dolor, fugiat non cum doloribus aperiam voluptates nostrum.
              </p>
